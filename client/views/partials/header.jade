header.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
  .container
    .navbar-header
      button.navbar-toggle(type="button" ng-click="isCollapse = !isCollapse")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(ga href="https://github.com/tomchentw/ng-preload-src" target="_blank") ng-preload-src

    nav.navbar-collapse(collapse="!isCollapse")
      ul.nav.navbar-nav
        li.dropdown
          a.dropdown-toggle(ga)
            | Change Image 
            b.caret
          ul.dropdown-menu
            li(ng-repeat="image in images")
              a(ga ng-click="$root.image = image" ng-bind="image.name")
